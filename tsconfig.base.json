{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "strictPropertyInitialization": false
  }
}
